#DESAFIO 1 - Calculadora
while True:
  num1 = int(input('Digite o primeiro número: '))
  operacao = input('Digite a operacao: ')
  num2 = int(input('Digite o primeiro número: '))

  if operacao == '+':
    resultado = num1 + numero2
  elif operacao == '-':
    resultado = num1 - numero2
  elif operacao == '*':
    resultado = num1 * numero2
  elif operacao == '/':
    resultado = num1 / numero2
  else:
    resultado = 'Operação inválida'

  print(num1,operacao,num2,'=',resultado)
